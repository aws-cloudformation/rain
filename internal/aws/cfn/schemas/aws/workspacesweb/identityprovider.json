{
  "typeName": "AWS::WorkSpacesWeb::IdentityProvider",
  "description": "Definition of AWS::WorkSpacesWeb::IdentityProvider Resource Type",
  "definitions": {
    "IdentityProviderDetails": {
      "type": "object",
      "patternProperties": {
        "^[\\s\\S]*$": {
          "type": "string",
          "maxLength": 131072,
          "minLength": 0,
          "pattern": "^[\\s\\S]*$"
        }
      },
      "additionalProperties": false
