    "IdentityProviderName": {
      "type": "string",
      "maxLength": 32,
      "minLength": 1,
      "pattern": "^[^_][\\p{L}\\p{M}\\p{S}\\p{N}\\p{P}][^_]+$"
    },
    "IdentityProviderType": {
      "$ref": "#/definitions/IdentityProviderType"
    },
    "PortalArn": {
